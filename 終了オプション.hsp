	screen 0,200,100,
	mes "combOS電源オプション"
	objsize 200,40
	button "シャットダウン",*shutdown
	button "再起動",*reboot
	stop
*reboot
	exitflag=1
*shutdown
	cls
	if exitflag=1:mes "再起動しています":else:mes "シャットダウンしています"
	//全アプリを強制終了
	if exitflag=1:exec "GUI再起動.bat",2
	exec "Applications\\system\\全終了.bat",2
	;exec dir_sys + "\\taskkill.exe /F /T /IM EXEの名前.exe"
	wait 500
	screen 0,1,1,2